server {
    listen 443 ssl;
    http2 on;
    server_name "{{ server_name }}" ;

    ssl_certificate     /etc/ssl/graylog.crt;
    ssl_certificate_key /etc/ssl/graylog.key;
    include /etc/ssl/ssl.conf;

    access_log /var/log/nginx/graylog/access.log;
    error_log  /var/log/nginx/graylog/error.log;

    # Разрешаем загрузку до 10 МБ
    client_max_body_size 10M;

      location /basic_status {
        stub_status;
        access_log off;
    }

    location / {
        proxy_pass http://127.0.0.1:9000;
        proxy_http_version 1.1;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
    }
}